<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:text="RAM"
                        android:padding="5dp"
                        android:background="@color/purple_200"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"/>
                </TableRow>
                <TableRow>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3">
                        <ProgressBar
                            android:id="@+id/pbRam"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar_states"
                            android:foregroundGravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/tv_perc_ram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Free"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/freeram"
                        android:textColor="@color/purple_500"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Used"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/usedram"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Total"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/totalram"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:text="ROM"
                        android:padding="5dp"
                        android:background="@color/purple_200"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"/>
                </TableRow>
                <TableRow>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3">

                        <ProgressBar
                            android:id="@+id/pbRom"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:foregroundGravity="center_horizontal"
                            android:progressDrawable="@drawable/progressbar_states" />
                        <TextView
                            android:id="@+id/tv_perc_rom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Free"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/freerom"
                        android:textColor="@color/purple_500"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Used"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/usedrom"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Total"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/totalrom"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:text="Java Heap"
                        android:padding="5dp"
                        android:textSize="20sp"
                        android:background="@color/purple_200"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Total"
                        android:textSize="20sp"
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/totalHeap"
                        android:textColor="@color/purple_500"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>